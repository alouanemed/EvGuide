<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="60.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.14"
        android:background="@drawable/ogranizer_event_dark_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8.0dip" >

        <TextView
            android:id="@+id/tvForfaitType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0.0dip"
            android:text="Gratuit"
            android:textColor="#ffaaaaaa"
            android:textSize="17.5sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvforfaitSoldetickets"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:inputType="text"
                android:textAlignment="center"
                android:text="30"
                android:textColor="#ffaaaaaa" />

            <TextView
                android:id="@+id/tvforfaitSoldeticketsx"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:inputType="text"
                android:text="/"
                android:textColor="#ffaaaaaa" />

            <TextView
                android:id="@+id/tvforfaittickets"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:inputType="text"
                android:text="100"
                android:textColor="#ffaaaaaa" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.94"
        android:background="@drawable/clickable_infos_inv_states"
        android:focusable="false"
        android:gravity="left|center"
        android:orientation="vertical"
        android:padding="8.0dip" >

        <TextView
            android:id="@+id/pack_Statut_Pack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvforfaitTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=" Forfait 1"
            android:textColor="#ff4c626f"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/tv_event_forf_id"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_event_forf_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>